{
    "name": "AppDaemon",
    "version": "1.2",
    "slug": "appdaemon",
    "description": "AppDaemon version (latest) for Home Assistant. Build using master branch.",
    "url": "https://github.com/sparck75/hassio-addons/appdaemon",
    "startup": "after",
    "image": "sparck75/{arch}-addon-appdaemon",
    "boot": "auto",
    "map": ["config:rw","addons:rw","ssl"],
    "options": {
        "domain": "x.x.x.x",
        "commtype": "SSE",
        "debugging": "none"
    },
    "schema": {
        "domain": "str",
        "commtype": "str",
        "debugging": "str"
    }, 
    "ports": {
        "80/tcp": 5050
    }
}
