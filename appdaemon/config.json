{
    "name": "AppDaemon",
    "version": "latest",
    "slug": "appdaemon",
    "description": "AppDaemon version (2.1.0) for Hassio. (private) // Build using master branch of appdaemon.",
    "url": "https://github.com/sparck75/hassio-addons/appdaemon",
    "startup": "after",
    "boot": "auto",
    "map": ["config:rw","addons:rw","ssl"],
    "options": {
        "domain": "x.x.x.x",
        "commtype": "sse",
        "debugging": "none"
    },
    "schema": {
        "domain": "str",
        "commtype": "str",
        "debugging": "str"
    }, 
    "ports": {
        "80/tcp": 5050
    },
    "image": "sparck75/{arch}-addon-appdaemon"
}
