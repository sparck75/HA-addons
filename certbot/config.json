{
    "name": "Certbot",
    "version": "0.1.7",
    "slug": "certbot",
    "description": "Certbot compagnion for Nginx Proxy",
    "url": "https://github.com/sparck75/HA-addons/tree/master/certbot",
    "startup": "system",
    "boot": "auto",
    "image": "bestlibre/{arch}-certbot",
    "options": {
        "debug": false,
        "email": "email@domain.tld",
        "certificats":[{"name": "hass",
                        "domains": "homeassistant.domain.tld" }],
	"ssl_only": false
    },
    "schema": {
        "debug": "bool",
        "email": "email",
        "certificats": [{"name": "str",
                         "domains": "str"}],
	"ssl_only": "bool"
    },
    "map": ["ssl:rw"],
    "ports": {"443/tcp": 10443}
}
