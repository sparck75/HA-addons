{
    "name": "Nginx Proxy",
    "version": "0.1.6",
    "slug": "nginx_proxy",
    "description": "Nginx Proxy for multiple VHOSTS",
    "url": "https://github.com/sparck75/HA-addons/tree/master/nginx_proxy",
    "startup": "system",
    "boot": "auto",
    "image": "bestlibre/{arch}-nginx-proxy",
    "options": {
	"vhosts":[
	    {"vhost": "homeassistant.domain.tld",
	     "port": "8123",
	     "default_server": true}
	]
    },
    "schema": {
	"vhosts": [
	    {"vhost": "str",
	     "remote": "str",
	     "port": "str",
	     "default_server": "bool",
	     "certname": "str",
	     "ssl_modern": "bool"
	    }
	]
    },
    "ports": {"80/tcp": 80, "443/tcp": 443},
    "map": ["ssl"]
}
